package exercicios_estrutura_condicional;

import java.util.Locale;
import java.util.Scanner;

public class exercicio_08 {
	 public static void main(String[] args) {
		 
		Locale.setDefault(Locale.US);
		Scanner sc = new Scanner(System.in);
		
		float salario, imposto = 0.00f, salarioFinal = 0.00f;
		
		System.out.println("Digite seu salário: ");
		salario = sc.nextFloat();
		
		if (salario <= 3000.00) {
			imposto = 0.08f * (salario - 2000.0f);
		}
		else if (salario <= 4500.00) {
			imposto = 0.08f * 1000.00f + 0.18f * (salario - 3000.0f);
			System.out.println(imposto);
		}
		else if (salario > 4500.00) {
			imposto = 0.08f * 1000.00f + 0.18f * 1500.00f + 0.28f * (salario - 4500.00f);
			System.out.println(imposto);
		}
		salarioFinal = salario + imposto;
		
		if (imposto  != 0.00f) {
			System.out.printf("O valor do imposto é de: R$%.2f%n", imposto);
			System.out.printf("O valor Total a ser pago é de R$%.2f", salarioFinal);
		}
		else {
			System.out.println("Isento de imposto");
			System.out.printf("O valor Total a ser pago é de R$%.2f", salario);
		}
		
		
		sc.close();
	 }
}
